#!/bin/bash

# GiddyUp Betfair Live Prices Fetcher
# Fetches live Betfair prices for a specific date using API-NG

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Check if binary exists
if [ ! -f "bin/fetch_all_betfair" ]; then
    echo -e "${RED}❌ Error: bin/fetch_all_betfair not found${NC}"
    echo -e "${YELLOW}Building...${NC}"
    go build -o bin/fetch_all_betfair cmd/fetch_all_betfair/main.go
    echo -e "${GREEN}✅ Built successfully${NC}"
    echo ""
fi

# Source environment variables
if [ -f "../settings.env" ]; then
    source ../settings.env
else
    echo -e "${YELLOW}⚠️  Warning: settings.env not found, using defaults${NC}"
fi

# Run the command with all arguments passed through
./bin/fetch_all_betfair "$@"

